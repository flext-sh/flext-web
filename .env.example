# FLEXT Web Dashboard Configuration
# Copy this to .env and customize for your environment

ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DEBUG=true
# Django Configuration
DJANGO_SETTINGS_MODULE=flext_web.settings.development
SECRET_KEY=your-django-secret-key-minimum-50-characters-long

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
PORT=8080
WSGI_WORKERS=4

DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_SIZE=20
# Database
DATABASE_URL=postgresql://flext:password@localhost:5432/flext_web

CACHE_TIMEOUT=3600
# Redis Cache & Sessions
REDIS_URL=redis://localhost:6379/2
SESSION_COOKIE_AGE=86400

MEDIA_ROOT=/app/media
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
# Static Files & Media
STATIC_URL=/static/

# Security
CSRF_TRUSTED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
SECURE_HSTS_SECONDS=0
SECURE_SSL_REDIRECT=false

# External Services
FLEXT_API_URL=http://localhost:8000
FLEXT_GRPC_URL=localhost:50051

LOGIN_REDIRECT_URL=/dashboard/
# Authentication
LOGIN_URL=/auth/login/
LOGOUT_REDIRECT_URL=/

DEFAULT_FROM_EMAIL=noreply@flext.dev
# Email Backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_HOST_PASSWORD=
EMAIL_HOST_USER=
EMAIL_PORT=587
EMAIL_USE_TLS=true

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=true
USE_L10N=true
USE_TZ=true

DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
# File Upload
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880

LOGGING_HANDLER=console
# Logging
LOGGING_LEVEL=INFO
